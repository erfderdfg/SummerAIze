{
  "name": "ai-conversation-summarizer",
  "displayName": "AI Conversation Summarizer",
  "description": "Summarizes AI conversations and displays them in a sidebar table",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "aiSummarizer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "aiSummarizer.summarizeText",
        "title": "Summarize Selected Text",
        "icon": "$(symbol-text)"
      },
      {
        "command": "aiSummarizer.clearSummaries",
        "title": "Clear All Summaries",
        "icon": "$(trash)"
      },
      {
        "command": "aiSummarizer.exportSummaries",
        "title": "Export Summaries",
        "icon": "$(export)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "aiSummarizerView",
          "name": "AI Conversation Summaries",
          "when": "workspaceHasAnyFile"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "aiSummarizer.refresh",
          "when": "view == aiSummarizerView",
          "group": "navigation"
        },
        {
          "command": "aiSummarizer.clearSummaries",
          "when": "view == aiSummarizerView",
          "group": "navigation"
        },
        {
          "command": "aiSummarizer.exportSummaries",
          "when": "view == aiSummarizerView",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "aiSummarizer.summarizeText",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "AI Conversation Summarizer",
      "properties": {
        "aiSummarizer.provider": {
          "type": "string",
          "default": "mock",
          "enum": ["ollama", "openai", "mock"],
          "description": "AI provider to use for summarization"
        },
        "aiSummarizer.model": {
          "type": "string",
          "default": "llama2",
          "description": "Model to use for summarization"
        },
        "aiSummarizer.maxSummaryLength": {
          "type": "number",
          "default": 3,
          "description": "Maximum number of sentences in summary"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}