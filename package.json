{
  "name": "ai-conversation-summarizer",
  "displayName": "AI Conversation Summarizer",
  "description": "Summarizes AI conversations and displays them in a sidebar",
  "version": "1.0.0",
  "publisher": "Molly",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiSummarizer.summarizeText",
        "title": "Summarize Selected Text",
        "icon": "$(symbol-text)"
      },
      {
        "command": "aiSummarizer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "aiSummarizer.clearSummaries",
        "title": "Clear All",
        "icon": "$(trash)"
      },
      {
        "command": "aiSummarizer.openSummary",
        "title": "Open Summary",
        "icon": "$(go-to-file)"
      },
      {
        "command": "aiSummarizer.showSummary",
        "title": "Show Summary Details",
        "icon": "$(info)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "aiSummarizerView",
          "name": "ðŸ¤– AI Summaries"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "aiSummarizer.refresh",
          "when": "view == aiSummarizerView",
          "group": "navigation"
        },
        {
          "command": "aiSummarizer.clearSummaries", 
          "when": "view == aiSummarizerView",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "aiSummarizer.summarizeText",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ],
      "view/item/context": [
        {
          "command": "aiSummarizer.openSummary",
          "when": "view == aiSummarizerView",
          "group": "inline"
        },
        {
          "command": "aiSummarizer.showSummary", 
          "when": "view == aiSummarizerView",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}